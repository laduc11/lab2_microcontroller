#include "clock.h"
#include "led7seg.h"

int hour = 0, min = 0, sec = 0;

void updateClockBuffrer()
{
	update_led_buffer();
}
void set_clock(int h, int m, int s)
{
	hour = h;
	min = m;
	sec = s;
}
int get_hour()
{
	return hour;
}
int get_min()
{
	return min;
}
int get_sec()
{
	return sec;
}
